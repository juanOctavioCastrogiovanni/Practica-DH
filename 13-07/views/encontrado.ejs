<!DOCTYPE html>
<html lang="en">
<%- include('./head')%>
<body>
<!---->	<%- include('./header')%>
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h1>Se ha encontrado <%=productos.length%> productos para el resultado: "<%=palabra%>"</h1>
			</div>
			<div class="row">
			<% productos.forEach(function(producto){%>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/detalle/<%= producto.id %>" class="text-decoration-none">
							<figure class="product-box_image">
								<img src="/images/<%= producto.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<% if(producto.discount!=0){ %>
								<h4 class="precio-real font-weight-bold">$<%=producto.price %></h4>
								<span><%= producto.discount%>% OFF</span>
								<% } %>
								<h3>$<%= (producto.price)-(producto.price * producto.discount /100) %></h3>
								<p><%=producto.name%><br><%=producto.description%></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
			
				<%})%>
			</div>
	<%-include('./footer')%>
</body>
</html>