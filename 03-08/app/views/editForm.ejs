<%- include('partials/head')%>
  <body>
    <form action="/movies/<%=movie.id%>/form?_method=PUT" method="POST">
        <div class="container">
          <h1>Edite la pelicula</h1>
          <p>Edite <%=movie.title%> y subela a la base de datos</p>
          
      
          <label><b>Titulo</b></label>
          <input type="text" name="title" value="<%=movie.title%>" required>
      
          <label><b>Premios</b></label>
          <input type="number" name="awards" value="<%=movie.awards%>"required>
      
          <label><b>Duración</b></label>
          <input type="number" name="length" value="<%=movie.length%>"required>
          

          <label><b>Rating</b></label>
          <input type="number" name="rating" value="<%=movie.rating%>"required>
        

          <label><b>Fecha de lanzamiento</b></label>
          <input type="date" name="release_date" value="<%=movie.release_date%>"required>
          

          <select name="genre_id">
              <% genres.forEach(genre => { %>
                <option value="<%=genre.id%>"><%=genre.name%></option>
              <%})%>
        </select>
        <p>¿Desea editar la lista de actores?</p>
        
         <button> <a href="/movies/<%=movie.id%>/lista-actores">Lista de actores</button></a>
             
          
          <button type="submit" class="registerbtn">Editar</button>
        </div>
    </form>
      <form action="/movies" method="GET" style="display: inline;">
        <button>Atras</button>
      </form>
  </body>

</html>
